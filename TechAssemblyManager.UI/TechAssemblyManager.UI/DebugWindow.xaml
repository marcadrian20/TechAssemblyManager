<Window x:Class="TechAssemblyManager.UI.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Debug Window" Height="400" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Debug Options" FontSize="20" FontWeight="Bold" Margin="0 0 0 10" HorizontalAlignment="Center"/>
            
            <Button Content="Delete All Orders" Click="DeleteAllOrders_Click" Margin="0,5"/>
            <Button Content="Delete User" Click="DeleteUser_Click" Margin="0,5"/>
            <TextBox Name="TxtUserName"  Margin="0,5"/>
            
            <Button Content="Delete All Service Requests" Click="DeleteAllServiceRequests_Click" Margin="0,5"/>
            <Button Content="Delete All Products" Click="DeleteAllProducts_Click" Margin="0,5"/>
            <Button Content="Delete All Promotions" Click="DeleteAllPromotions_Click" Margin="0,5"/>
            
            <TextBlock Name="LblStatus" Foreground="Red" Margin="0,10,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>