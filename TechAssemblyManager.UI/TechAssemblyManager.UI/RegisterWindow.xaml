<Window x:Class="TechAssemblyManager.UI.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechAssemblyManager.UI"
        mc:Ignorable="d"
        Title="Înregistrare" Height="500" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel Width="280" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Înregistrare" FontSize="22" FontWeight="Bold" Margin="0 0 0 20" TextAlignment="Center"/>

            <TextBlock Text="Username:"/>
            <TextBox Name="TxtUsername" Margin="0,5"/>

            <TextBlock Text="Email:"/>
            <TextBox Name="TxtEmail" Margin="0,5"/>

            <TextBlock Text="Prenume:"/>
            <TextBox Name="TxtFirstName" Margin="0,5"/>

            <TextBlock Text="Nume:"/>
            <TextBox Name="TxtLastName" Margin="0,5"/>

            <TextBlock Text="Adresă:"/>
            <TextBox Name="TxtAddress" Margin="0,5"/>

            <TextBlock Text="Telefon:"/>
            <TextBox Name="TxtPhone" Margin="0,5"/>

            <TextBlock Text="Parolă:"/>
            <PasswordBox Name="TxtPassword" Margin="0,5"/>

            <TextBlock Text="Confirmare parolă:"/>
            <PasswordBox Name="TxtConfirmPassword" Margin="0,5"/>

            <TextBlock Name="LblError" Foreground="Red" Visibility="Collapsed" Margin="0,5"/>

            <Button Content="Creează cont" Click="BtnRegister_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>