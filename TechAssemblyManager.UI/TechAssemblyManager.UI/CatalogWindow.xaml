<Window x:Class="TechAssemblyManager.UI.CatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechAssemblyManager.UI"
        mc:Ignorable="d"
        Title="Catalog Produse" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filtrare după categorie -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Categorie:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Name="CmbCategorie" Width="200" SelectionChanged="CmbCategorie_SelectionChanged"/>
        </StackPanel>

        <!-- Afișare produse -->
        <DataGrid Name="ProductGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nume" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Preț (lei)" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Rating" Binding="{Binding Rating}" Width="80"/>
                <DataGridTextColumn Header="Descriere" Binding="{Binding Description}" Width="200"/>
                <DataGridTemplateColumn Header="Acțiune" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Adaugă în Coș" Click="AddToCart_Click" IsEnabled="{Binding CanAdd}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
