<Window x:Class="TechAssemblyManager.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechAssemblyManager.UI"
        mc:Ignorable="d"
       Title="Autentificare" Height="300" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">

            <TextBlock Text="Autentificare" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0 0 0 20"/>

            <TextBlock Text="Email sau username:"/>
            <TextBox Name="TxtUsername" Margin="0,5"/>

            <TextBlock Text="Parolă:"/>
            <PasswordBox Name="TxtPassword" Margin="0,5"/>

            <TextBlock Name="LblError" Foreground="Red" Margin="0,5" Visibility="Collapsed"/>
            <Button Content="Autentifică-te" Click="BtnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
